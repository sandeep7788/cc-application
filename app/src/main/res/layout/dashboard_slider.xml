<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- image viwer to view the images -->
    <ImageView
        android:id="@+id/imageViewMain"
        android:elevation="4dp"
        android:scaleType="fitXY"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:orientation="vertical"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/intel"
            android:gravity="center|start"
            android:ellipsize="end"
            android:lines="2"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:elevation="4dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtShortDes"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="2dp"
            android:lines="3"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/intel"
            android:foregroundGravity="center"
            android:gravity="center|start"
            android:ellipsize="end"
            android:text="sdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldk"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txtLongDesTwo"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:lines="4"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/intel"
            android:ellipsize="end"
            android:foregroundGravity="center"
            android:gravity="center|start"
            android:text="sdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldksdjasljalsldk"
            android:textColor="@color/gray_btn_bg_color"
            android:textSize="@dimen/txt_10sp" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>