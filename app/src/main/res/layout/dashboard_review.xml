<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- image viwer to view the images -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/intel"
            android:gravity="center"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="Review"
            android:textColor="@color/theme_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/intel"
            android:gravity="center"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="What Do They Say About Us?"
            android:textColor="@color/gpvch_black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/review_icon"
            android:elevation="4dp"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/txtReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/intel"
            android:gravity="center"
            android:maxLines="5"
            android:ellipsize="end"
            android:paddingTop="2dp"
            android:text="I am satisfied about my experience at Keyhole clinic with pleasant behavior and succesful treatment by Dr. Padmakumar and entire team. I would recommend anyone to keyhole clinic."
            android:textColor="@color/gpvch_black"
            android:textSize="12dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageProfile"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp" />


        <TextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/intel"
            android:gravity="center"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/gpvch_black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/intel"
            android:gravity="center"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="position"
            android:textColor="@color/gpvch_black"
            android:textSize="12dp" />


    </LinearLayout>
</LinearLayout>