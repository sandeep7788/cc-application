<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/white"
        android:elevation="1dp"
        android:orientation="vertical"
        android:paddingBottom="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            app:cardCornerRadius="@dimen/txt_5sp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:backgroundTint="@color/white"
            android:elevation="4dp"
            android:foregroundGravity="center"
            android:minHeight="100dp"
            android:orientation="vertical"
            android:src="@drawable/logo_dashboard"
            />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            android:paddingStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left|left"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="65dp"
                android:fontFamily="@font/intel"
                android:foregroundGravity="center|left"
                android:gravity="center|left|left"
                android:text="MADHU CLINIC"
                android:textColor="@color/gpvch_black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left|top"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="45dp"
                android:lines="4"
                android:fontFamily="@font/intel"
                android:ellipsize="end"
                android:foregroundGravity="center|left|top"
                android:gravity="center|left|top"
                android:text="texttexttexttexttexttexttexttexttexttexttexttexttexttext"
                android:textColor="@color/gray_btn_bg_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:drawablePadding="16dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="65dp"
                android:layout_marginBottom="12dp"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                android:drawableTint="@color/dark_green"
                android:fontFamily="@font/intel"
                android:foregroundGravity="center|left"
                android:gravity="center|left"
                android:text="Explore More"
                android:textColor="@color/dark_green" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>